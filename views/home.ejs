<%- include('partials/header'); -%>

<h1>Home</h1>

<p><%= homeContent %></p>

<% postAll.forEach(function(post){ %>

  <h1><%= post.title %></h1>
  <p><% if (post.body.length < 100) { %>
    <%= post.body %>
  <% } else { %>
    <%= post.body.substr(0,100) %>
  <% } %> <a href="/posts/ <%= post.title %>">...Read More</a> </p>



<% }); %>


<%- include('partials/footer'); -%>
